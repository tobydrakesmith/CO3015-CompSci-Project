<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiterounded">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginStart="@dimen/small"
            android:layout_marginTop="@dimen/small"
            android:background="@drawable/borderbottom"
            android:padding="@dimen/medium">

            <ProgressBar
                android:id="@+id/progress_spinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/medium"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginStart="@dimen/medium"
                android:indeterminate="true"
                android:indeterminateBehavior="cycle"
                android:indeterminateDrawable="@drawable/sdk_spinner_circle"
                app:layout_constraintEnd_toStartOf="@+id/dialog_title"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/scan_again"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/medium"
                android:layout_marginStart="@dimen/medium"
                android:src="@drawable/ic_refresh_scan_again"
                tools:visibility="visible"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/dialog_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/medium"
                android:layout_marginRight="@dimen/large"
                android:layout_marginStart="@dimen/medium"
                android:text="@string/sdk_dialog_title_card_reader_found"
                android:textColor="@color/sdk_default_text_color"
                android:textSize="@dimen/text_20"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView android:id="@+id/listview_card_readers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:layout_marginBottom="@dimen/smium"
            android:layout_marginTop="@dimen/smium"
            tools:listitem="@layout/layout_listitem_card_reader" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:padding="@dimen/medium"
        android:src="@drawable/ic_close_dialog" />

</FrameLayout>