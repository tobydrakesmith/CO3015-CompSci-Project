<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiterounded">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/medium">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/medium"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginTop="@dimen/medium"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingBottom="@dimen/medium"
            android:paddingTop="@dimen/large"
            android:text="@string/sdk_dialog_title_connect_to_last"
            android:textAlignment="center"
            android:textColor="@color/sdk_default_text_color"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_reader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/large"
            android:layout_marginLeft="@dimen/large"
            android:layout_marginTop="@dimen/medium"
            android:src="@drawable/ic_chipnswipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

        <TextView
            android:id="@+id/device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/medium"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginTop="@dimen/medium"
            android:gravity="center"
            android:text="@string/sdk_last_connect_deviceid_placeholder"
            android:textAlignment="center"
            android:textColor="@color/sdk_default_text_color"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/image_reader"
            app:layout_constraintStart_toStartOf="@+id/image_reader"
            app:layout_constraintTop_toBottomOf="@+id/image_reader" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/medium"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginTop="@dimen/medium"
            android:gravity="center"
            android:text="@string/sdk_last_connect_devicename_placeholder"
            android:textAlignment="center"
            android:textColor="@color/sdk_reader_name"
            android:textSize="@dimen/text_special"
            app:layout_constraintEnd_toEndOf="@+id/image_reader"
            app:layout_constraintStart_toStartOf="@+id/image_reader"
            app:layout_constraintTop_toBottomOf="@+id/device_id" />

        <LinearLayout
            android:id="@+id/container_interaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/device_name">

            <!--
                Programmatically include layout_progress_with_label or layout_buttons_primary_n_tertiary
                or any other layout that is extracted to its own separate layout file

                e.g:
                <include layout="@layout/layout_buttons_primary_n_tertiary" />
             -->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:padding="@dimen/medium"
        android:src="@drawable/ic_close_dialog" />

</FrameLayout>