<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/list_item_linear_container"
    android:paddingBottom="@dimen/small"
    android:paddingTop="@dimen/small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/medium"
        android:layout_gravity="start"
        >

        <ImageView
            android:id="@+id/image_card_reader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/medium"
            android:src="@drawable/ic_chipnswipe"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/progress_spinner"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_margin="10dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateDrawable="@drawable/sdk_spinner_circle"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/large"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_reader_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/sdk_card_reader_list_item_name"
            android:textColor="@color/sdk_default_text_color"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_reader_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sdk_card_reader_list_item_desc"
            android:textColor="@color/sdk_reader_name"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/card_reader_in_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:textColor="@color/sdk_reader_name"
            android:visibility="gone"
            android:text="@string/sdk_card_reader_list_item_in_use"/>

        <TextView
            android:id="@+id/card_reader_connecting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/sdk_reader_name"
            tools:visibility="visible"
            android:visibility="gone"
            android:text="@string/sdk_card_reader_list_item_connecting"/>

    </LinearLayout>

</LinearLayout>


