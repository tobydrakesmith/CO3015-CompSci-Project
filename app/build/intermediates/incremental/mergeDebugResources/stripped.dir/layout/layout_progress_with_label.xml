<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_progress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/whiterounded">

    <ProgressBar
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_gravity="bottom|center_horizontal"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:indeterminateDrawable="@drawable/sdk_spinner_circle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/smium"
        android:gravity="center"
        android:text="@string/sdk_label_progress_connecting"
        android:textAlignment="center"
        android:textColor="@color/sdk_dark_grey2"
        android:textSize="@dimen/text_special" />

</LinearLayout>