<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiterounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="@dimen/small"
        android:orientation="vertical"
        android:padding="@dimen/small">

        <ImageView
            android:id="@+id/scan_error_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_critical" />

        <TextView
            android:id="@+id/scan_error_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/larger"
            android:gravity="center"
            android:text="@string/sdk_label_could_not_connect_to_reader_title"
            android:textColor="@color/sdk_default_text_color"
            android:textSize="@dimen/text_special"
            android:textStyle="normal" />


        <LinearLayout
            android:id="@+id/card_reader_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_card_reader"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/medium"
                android:src="@drawable/ic_chipnswipe"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/large">

                <TextView
                    android:id="@+id/card_reader_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sdk_last_connect_deviceid_placeholder"
                    android:textColor="@color/sdk_default_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/card_reader_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sdk_last_connect_devicename_placeholder"
                    android:textColor="@color/sdk_reader_name"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/scan_error_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/larger"
            android:gravity="center"
            android:textColor="@color/sdk_default_text_color"
            android:padding="@dimen/small"
            android:text="@string/sdk_label_connection_scan_error_description" />

        <LinearLayout
            android:id="@+id/container_interaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:orientation="vertical">

        </LinearLayout>



    </LinearLayout>


</FrameLayout>